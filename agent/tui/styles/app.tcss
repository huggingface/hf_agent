/* HuggingFace Agent TUI - Simplified Dark Theme */

/* Color palette */
$hf-yellow: #FFD21E;
$hf-yellow-dim: #B8960F;
$hf-green: #98C379;
$hf-red: #E06C75;
$hf-cyan: #56B6C2;
$hf-blue: #61AFEF;
$hf-fg: #ABB2BF;
$hf-fg-dim: #5C6370;

/* === GLOBAL === */
Screen {
    background: transparent;
}

/* === HEADER & FOOTER === */
Header {
    background: $hf-yellow;
    color: #000000;
    height: 1;
    text-align: left;
}

HeaderTitle {
    text-style: bold;
    color: #000000;
    text-align: left;
    padding: 0 1;
}

HeaderClock {
    display: none;
}

HeaderIcon {
    display: none;
}

Footer {
    background: transparent;
    color: $hf-fg-dim;
    height: 1;
}

FooterKey > .footer-key--key {
    background: $hf-yellow;
    color: #000000;
}

/* === MAIN LAYOUT === */
#main {
    height: 1fr;
    background: transparent;
}

#chat-container {
    height: 1fr;
    background: transparent;
}

/* === CHAT AREA === */
ChatWidget {
    height: 1fr;
    background: transparent;
    scrollbar-gutter: stable;
    scrollbar-size: 1 1;
}

VerticalScroll {
    scrollbar-background: transparent;
    scrollbar-color: $hf-fg-dim;
    scrollbar-color-hover: $hf-yellow-dim;
    scrollbar-color-active: $hf-yellow;
    scrollbar-size: 1 1;
}

.processing-indicator {

    color: $hf-yellow;
    padding: 1 2;
    text-style: italic;
    background: transparent;
}

/* === MESSAGES === */
MessageCell {
    margin: 0 1;
    background: transparent;
}

MessageCell.system {
    color: $hf-fg-dim;
}

MessageCell.error {
    color: $hf-red;
}

/* === TOOLS === */
ToolCallWidget, ToolOutputWidget, PlanWidget {
    margin: 0 1;
    background: transparent;
}

PlanWidget.hidden {
    display: none;
}

/* === STREAMING LOGS === */
StreamingLogWidget {
    height: auto;
    max-height: 30;
    margin: 0 1;
    background: transparent;
}

StreamingLogWidget > .log-scroll {
    height: auto;
    max-height: 28;
    border: solid $hf-green;
    background: transparent;
    padding: 1;
    scrollbar-size: 1 1;
}

StreamingLogWidget .log-content {
    color: $hf-green;
    background: transparent;
}

/* === INPUT AREA === */
InputArea {
    height: auto;
    background: transparent;
    border-top: solid $hf-yellow-dim;
    dock: bottom;
    padding: 0 1;
}

InputArea > #prompt {
    width: 2;
    color: $hf-cyan;
    text-style: bold;
    background: transparent;
}

InputArea > #user-input {
    width: 1fr;
    border: none;
    height: 1;
    background: transparent;
}

InputArea.disabled > #user-input {
    color: $hf-fg-dim;
    background: transparent;
}

/* === STATUS BAR === */
#status-bar {
    height: 0;
    background: transparent;
    color: $hf-green;
    content-align: left middle;
}

#status-bar.yolo {
    height: 1;
    background: $hf-yellow 20%;
    color: $hf-yellow;
    text-style: bold;
}

/* === APPROVAL SCREEN === */
ApprovalScreen {
    align: center middle;
    background: transparent;
}

ApprovalScreen > #approval-container {
    width: 90%;
    max-width: 120;
    height: 90%;
    background: transparent;
    border: solid $hf-yellow;
    padding: 1 2;
}

ApprovalScreen #tool-scroll {
    height: 1fr;
    background: transparent;
    border: solid $hf-fg-dim;
    margin: 1 0;
    scrollbar-size: 1 1;
}

ApprovalScreen #input-section {
    height: auto;
    padding: 1 0;
}

ApprovalScreen #approval-input {
    width: 100%;
}

/* === COLLAPSIBLE TOOLS === */
CollapsibleToolCall {
    margin: 1;
}

CollapsibleToolCall > CollapsibleTitle {
    color: $hf-yellow;
    padding: 0 1;
}

CollapsibleToolCall > Contents {
    padding: 0 1;
}

/* === GENERIC INPUTS & BUTTONS === */
Input {
    background: transparent;
    border: none;
}

Input:focus {
    border: none;
}

Button {
    border: solid $hf-fg-dim;
}

Button:hover {
    background: $hf-yellow-dim;
    color: #000000;
}

Button:focus {
    border: solid $hf-yellow;
}
