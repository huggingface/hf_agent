/* HF Agent CLI Styles - Minimal, Backgroundless */

Screen {
    background: transparent;
}

/* Main layout - horizontal split */
#main_layout {
    background: transparent;
    height: 1fr;
}

/* Main container - no background */
#main_container {
    background: transparent;
    padding: 0;
    width: 1fr;
}

/* Status bar at top - subtle */
StatusBar {
    background: transparent;
    color: #8B949E;
    height: 1;
    padding: 0 1;
    dock: top;
}

/* Chat log - main content area */
ChatLog {
    background: transparent;
    padding: 0 1;
    scrollbar-background: transparent;
    scrollbar-color: #484F58;
    scrollbar-color-hover: #6E7681;
    scrollbar-color-active: #8B949E;
}

/* Plan panel - appears above input when active */
PlanPanel {
    background: transparent;
    padding: 0 1;
    height: auto;
    display: none;
}

PlanPanel.visible {
    display: block;
    padding-top: 1;
    margin-top: 1;
}

/* User input at bottom */
UserInput {
    background: transparent;
    border: none;
    padding: 0 1;
    height: auto;
    min-height: 1;
    dock: bottom;
}

UserInput:focus {
    border: none;
}

UserInput > .input--placeholder {
    color: #6E7681;
}

/* Approval dialog modal */
ApprovalScreen {
    align: center middle;
    background: rgba(0, 0, 0, 0.5);
}

#approval_dialog {
    background: #161B22;
    border: solid #FFD21E;
    width: 80%;
    max-width: 100;
    height: auto;
    max-height: 80%;
    padding: 1 2;
}

#approval_header {
    background: #FFD21E;
    color: #0D1117;
    text-align: center;
    padding: 0 1;
    margin-bottom: 1;
    text-style: bold;
}

#approval_content {
    height: auto;
    max-height: 50;
    overflow-y: auto;
    background: #0D1117;
    padding: 1;
    margin-bottom: 1;
    border: solid #30363D;
}

#approval_buttons {
    height: auto;
    align: center middle;
    padding-top: 1;
}

#approval_buttons Button {
    margin: 0 1;
    min-width: 16;
}

#item_counter {
    text-align: center;
    color: #8B949E;
    margin-bottom: 1;
}

/* Button styles */
Button {
    background: #21262D;
    color: #C9D1D9;
    border: none;
}

Button:hover {
    background: #30363D;
}

Button:focus {
    background: #30363D;
    border: none;
}

.approve_btn {
    background: #238636;
    color: white;
}

.approve_btn:hover {
    background: #2EA043;
}

.reject_btn {
    background: #DA3633;
    color: white;
}

.reject_btn:hover {
    background: #F85149;
}

.yolo_btn {
    background: #FFD21E;
    color: #0D1117;
}

.yolo_btn:hover {
    background: #FFF066;
}

/* Scrollbar styling - minimal */
* {
    scrollbar-background: transparent;
    scrollbar-color: #484F58;
    scrollbar-color-hover: #6E7681;
    scrollbar-color-active: #8B949E;
    scrollbar-size: 1 1;
}
